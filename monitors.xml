<monitors version="1">
  <configuration>
      <clone>no</clone>
      <output name="default">
          <vendor>???</vendor>
          <product>0x0000</product>
          <serial>0x00000000</serial>
          <!-- 180110 edited by Cheongyo Bahk
               after changing /etc/default/grub, to remove error msg on start up
               reference:
                  https://askubuntu.com/questions/702628/ubuntu-hyper-v-guest-display-resolution-win-10-15-04
               original code :
          <width>1920</width>
          <height>1080</height>
          -->
          <width>1920</width>
          <height>1080</height>
          <rate>0</rate>
          <x>0</x>
          <y>0</y>
          <rotation>normal</rotation>
          <reflect_x>no</reflect_x>
          <reflect_y>no</reflect_y>
          <primary>yes</primary>
      </output>
  </configuration>
</monitors>
